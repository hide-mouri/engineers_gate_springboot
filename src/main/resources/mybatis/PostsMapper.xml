<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.dcworks.engineersgate.egsns.mybatis.PostsMapper">

	<resultMap id="getNewPostsMap" type="jp.dcworks.engineersgate.egsns.mybatis.entity.PostsMappingEntity">
		<result property="id" column="id" />
		<result property="usersId" column="users_id" />
		<result property="title" column="title" />
		<result property="body" column="body" />
		<result property="created" column="created" />
		<result property="imageUri" column="image_uri" />
		<result property="name" column="name" />
		<result property="iconUri" column="icon_uri" />
	</resultMap>

	<!-- 投稿テーブルより除外ユーザーID以外の投稿最新情報を取得する。 -->
	<select id="getNewPosts" resultMap="getNewPostsMap">
		SELECT
			p.id as id
			, p.users_id
			, p.title
			, p.body
			, p.created
			, pi.image_uri
			, u.name
			, u.icon_uri
		FROM
			posts p
				LEFT JOIN users u ON
					p.users_id = u.id
				LEFT JOIN post_images pi ON
					p.id = pi.posts_id
		WHERE
			p.users_id != #{excludedUsersId}
			AND p.id in (
				SELECT
					max(p2.id) as id
				FROM
					posts p2
				GROUP BY
					p2.users_id
			)
		ORDER BY
			p.id DESC
		;
	</select>
</mapper>